        <!--android:id="@+id/add_password_confirm"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="@string/confirm_password_hint"-->
        <!--android:inputType="textPassword"-->
        <!--android:maxLines="1" />-->
</LinearLayout>


